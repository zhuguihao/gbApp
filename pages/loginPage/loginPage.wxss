/* pages/loginPage/loginPage.wxss */

page {
  background-image: url(http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg);
  /* background-repeat: no-repeat; */
  background-size: auto 100%;
  -moz-background-size: auto 100%;
}

.LoginMain {
  position: fixed;
  top: 550rpx;
  left: 100rpx;
  opacity: 0.83;
  -moz-opacity: 0.83;
}

.loginFrom {
  border: 1rpx solid #f5f5f9;
  width: 550rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.loginLine {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #f5f5f9;
  margin-left: 20rpx;
}

.loginTile {
  margin-top: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.loginLine input {
  margin-top: 40rpx;
  height: 50rpx;
  /* width: 360rpx; */
}

.loginBtn {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #404040;
  text-align: center;
}

.register {
  color: #fff;
  text-align: right;
}
.register text:first-child{
  margin-right: 10rpx;
  padding-right: 10rpx;
  border-right: 1px solid #f5f5f9;
}