/* pages/loginPage/loginPage.wxss */

page {
  background-image: url(https://gb.zhuguihao.com/image/login.jpg);
  /* background-repeat: no-repeat; */
  background-size: auto 100%;
  -moz-background-size: auto 100%;
} 

.LoginMain {
  position: fixed;
  top: 500rpx;
  left: 100rpx;
  opacity: 0.7;
  -moz-opacity: 0.7;
}

.loginFrom {
  border: 1rpx solid #f5f5f9;
  width: 550rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

.loginLine {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #f5f5f9;
  margin-left: 20rpx;
}

.loginTile {
  margin-top: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 120rpx;
  text-align: right;
}

.loginInput {
  padding-left: 15rpx;
  margin-top: 40rpx;
  height: 50rpx;
  width: 380rpx;
}

.loginBtn {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #404040;
  text-align: center;
}

.register {
  color: #fff;
  text-align: right;
}
.register text:first-child{
  margin-right: 10rpx;
  padding-right: 10rpx;
  border-right: 1px solid #f5f5f9;
}